@model WebBanHang.Models.LoaiSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="bg-info py-2">
            <h4 class="text-white text-center"><strong>Thêm loại sản phẩm</strong></h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã loại sản phẩm</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MaLSP,  new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.MaLSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên loại sản phẩm</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TenLSP,   new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
