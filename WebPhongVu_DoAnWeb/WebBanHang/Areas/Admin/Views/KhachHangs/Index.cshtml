@model IEnumerable<WebBanHang.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-info">
        <div class="row">
            <div class="col-md-6 ">
                <strong class="text-uppercase text-danger ">Danh sách khách hàng</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "KhachHangs")" class="btn btn-sm btn-success">
                    Thêm
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th>Tên khách hàng</th>
                    <th>Mã khách hàng</th>
                    <th>Địa chỉ khách hàng</th>
                    <th>Ngày sinh khách hàng</th>
                    <th>Password khách hàng</th>
                    <th>Email khách hàng</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkID" type="checkbox" />
                        </td>
                        <td>@item.HoTen</td>
                        <td>@item.MaKH</td>
                        <td>@item.DiaChi</td>
                        <td>@item.NgaySinh</td>
                        <td>@item.MatKhau</td>
                        <td>@item.Email</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit","KhachHangs", new {@id=item.MaKH})" class="btn btn-sm btn-info"><i class="fa-solid fa-edit"></i></a>

                            <a href="@Url.Action("Details","KhachHangs", new {@id=item.MaKH})" class="btn btn-sm btn-warning"><i class="fa-solid fa-circle-info"></i></a>

                            <a href="@Url.Action("Delete","KhachHangs", new {@id=item.MaKH})" class="btn btn-sm btn-danger"> <i class="fa-solid fa-trash"></i></a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

