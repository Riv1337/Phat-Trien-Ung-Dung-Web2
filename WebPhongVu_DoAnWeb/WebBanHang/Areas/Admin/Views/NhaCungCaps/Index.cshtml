@model IEnumerable<WebBanHang.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header bg-info">
        <div class="row">
            <div class="col-md-6 ">
                <strong class="text-uppercase text-danger ">Danh sách nhà cung cấp</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "NhaCungCaps")" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i>Thêm
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:20px;" class="text-center">ID</th>
                    <th>Tên nhà cung cấp</th>
                    <th>Địa chỉ</th>
                    <th>SĐT NCC</th>
                    <th>Email NCC</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkID" type="checkbox" />
                        </td>
                        <td class="text-center">@item.MaNCC</td>
                        <td>@item.TenNCC</td>
                        <td>@item.DiaChi</td>
                        <td>@item.SDT_NCC</td>
                        <td>@item.Email</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit","NhaCungCaps", new {@id=item.MaNCC})" class="btn btn-sm btn-info"><i class="fa-solid fa-edit"></i></a>

                            <a href="@Url.Action("Details","NhaCungCaps", new {@id=item.MaNCC})" class="btn btn-sm btn-warning"><i class="fa-solid fa-circle-info"></i></a>

                            <a href="@Url.Action("Delete","NhaCungCaps", new {@id=item.MaNCC})" class="btn btn-sm btn-danger"> <i class="fa-solid fa-trash"></i></a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

