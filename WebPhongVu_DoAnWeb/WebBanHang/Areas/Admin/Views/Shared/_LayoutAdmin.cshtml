<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Public/CSS/LayoutAdmin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Public/CSS/all.min.css" rel="stylesheet" />
    @RenderSection("head", required: false)

</head>
<body>
    <section class="clearfix header bg-light">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg bg-transparent">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index","Dashboard")">Phong Vũ</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Dashboard")">Trang chủ</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Tài khoản
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index","NhanViens")">Nhân viên</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","KhachHangs")">Khách hàng</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sản phẩm
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Product")">Danh sách sản phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Product")">Thêm sảm phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Category")">Danh sách loại sản phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Category")">Thêm loại sảm phẩm</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="navbar" href="@Url.Action("Index", "NhaCungCaps")">Nhà cung cấp</a>
                            </li>
                        </ul>
                        
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="clearfix maincontent">
        <div class="container-fluid py-3"></div>
        @RenderBody()
    </section>
    <section class="clearfix footer bg-info">
        <div class="container-fluid text-white text-center py-3">Richard Baly Kim Hoàng</div>
        
    </section>


    @RenderSection("footer", required: false)
</body>
</html>
