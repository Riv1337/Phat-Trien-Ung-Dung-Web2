@model IEnumerable<WebBanHang.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header bg-info">
        <div class="row">
            <div class="col-md-6 ">
                <strong class="text-uppercase text-danger ">Danh sách sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-success">
                    Thêm
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:90px;" class="text-center">Hình</th>
                    <th>Tên sản phẩm</th>
                    <th>Mã sản phẩm</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>
                    <th style="width:20px;" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkID" type="checkbox" />
                        </td>
                        <td class="text-center">
                            <img src="~/Public/Images/@item.AnhSP" class="img-fluid" />
                        </td>
                        <td>@item.TenSP</td>
                        <td>@item.MaSP</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit","Product", new {@id=item.MaSP})" class="btn btn-sm btn-info"><i class="fa-solid fa-edit"></i></a>

                            <a href="@Url.Action("Details","Product", new {@id=item.MaSP})" class="btn btn-sm btn-warning"><i class="fa-solid fa-circle-info"></i></a>

                            <a href="@Url.Action("Delete","Product", new {@id=item.MaSP})" class="btn btn-sm btn-danger"> <i class="fa-solid fa-trash"></i></a>

                        </td>
                        <td class="text-center">@item.MaSLP</td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</div>

