@model WebBanHang.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="bg-info py-2">
            <h4 class="text-white text-center"><strong>Thêm sản phẩm</strong></h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Tên sản phẩm</label>
            @Html.TextAreaFor(model => model.TenSP, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Ảnh sản phẩm</label>
            <input type="file" name="fileimg" id="fileimg" class="form-control" />
        </div>


        <div class="form-group">
            <label>Mã sản phẩm</label>
            @Html.TextAreaFor(model => model.MaSP, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Đơn vị tính</label>
            @Html.TextAreaFor(model => model.DVT, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DVT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Đơn giá</label>
            @Html.TextAreaFor(model => model.DonGia, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Mô tả sản phẩm</label>
            @Html.TextAreaFor(model => model.MoTaSP, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MoTaSP, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Mã loại sản phẩm</label>
            @Html.DropDownListFor(model => model.MaSLP, (SelectList)ViewBag.ListMaLSP, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
