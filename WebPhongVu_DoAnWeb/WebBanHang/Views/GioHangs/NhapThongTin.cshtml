@model WebBanHang.ViewModels.CheckoutViewModel

@{
    ViewBag.Title = "Nhập thông tin";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

@if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
{
    <!-- Your existing HTML for an empty cart -->
}
else
{
    <section class="section-content padding-y">
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    <div class="card">
                        <form action="@Url.Action("ProcessPayment", "GioHangs")" method="post">
                            <table class="table table-borderless table-shopping-cart">
                                <!-- Your existing HTML for displaying cart items -->
                            </table>

                            <article class="card-body">
                                <header class="mb-4">
                                    <h4 class="card-title">Nhập thông tin người nhận</h4>
                                </header>

                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="number" class="form-control" placeholder="" name="SDT" value="">
                                    </div>

                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" class="form-control" placeholder="" name="Email" value="">
                                    </div>

                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <input type="tel" class="form-control" placeholder="" name="DiaChiNhan" value="">
                                    </div>

                                    <div class="form-group">
                                        <label>Ghi chú</label>
                                        <input type="text" class="form-control" placeholder="" name="GhiChu" value="">
                                    </div>

                                    <div class="card-body">
                                        <span class="input-group-append" style="float:right">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <h5>Thanh Toán</h5>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </article>
                        </form>
                    </div>
                </main>
            </div>
        </div>
    </section>
}
