@model IEnumerable<WebBanHang.Models.SanPham>

    @foreach (var item in Model)
    {
    <div class="card col-md-3 text-center">
        <div class="card-block">
            <h4 class="card-title">@item.TenSP</h4>
            <img src="~/Public/Images/@item.AnhSP" style="width:150px; height:150px" class="text-center card-img-top img-fluid" alt="...">
            <p class="card-text" style="height: 3em; overflow: hidden; text-overflow: ellipsis;">@item.MoTaSP</p>
            <p>Đơn vị tính: @item.DVT</p>
            <p>Giá: @(item.DonGia.HasValue ? item.DonGia.Value.ToString("#,##0").Replace(',', '.') : "N/A") VNĐ</p>
            <a href="@Url.Action("ThemVaoGio", "GioHangs" , new { MaSP=item.MaSP })" id="btnAddToCart" onclick="AddtoCart(this)" class="btn btn-primary"><i class="fas fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
        </div>
    </div>
    }
